{
  "name": "antlr-playground",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:api\"",
    "dev:web": "cd apps/web && pnpm run dev",
    "dev:api": "netlify dev",
    "build:highlight": "npm run clean:generated && java -jar netlify/functions/antlr-compiler/antlr-4.13.1-complete.jar -Dlanguage=TypeScript -o apps/web/src/grammar/generated -visitor -lib apps/web/src/grammar/grammars apps/web/src/grammar/grammars/ANTLRv4Lexer.g4 apps/web/src/grammar/grammars/ANTLRv4Parser.g4",
    "clean:generated": "rm -f apps/web/src/grammar/generated/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@netlify/functions": "^4.1.6",
    "@stagewise/toolbar": "^0.4.9",
    "@types/d3-flextree": "^2.1.4",
    "@types/node": "^24.0.3",
    "concurrently": "^8.2.2",
    "netlify-cli": "^22.1.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "antlr4": "^4.13.2",
    "antlr4ng": "^3.0.16",
    "d3-flextree": "^2.1.2",
    "node-fetch": "^3.3.2"
  }
}
